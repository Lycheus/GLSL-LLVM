<?xml version="1.0" encoding="US-ASCII"?>
<!-- This tests that attributes can only be declared at global scope.        -->
<!-- The fragment shader should fail to compile.                             -->
<test mode="gl" pattern="build">
	<compstat>false</compstat>
	<linkstat>false</linkstat>
	<shader>
		<vertshader>attribute_vert.vert</vertshader>
		<fragshader>default.frag</fragshader>
	</shader>
</test>
